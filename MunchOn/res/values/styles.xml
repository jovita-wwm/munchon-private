<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExampleTheme" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="homeAsUpIndicator">@drawable/new_indicator</item>
        <item name="android:homeAsUpIndicator">@drawable/new_indicator</item>
        <item name="android:activatedBackgroundIndicator">@drawable/listitem_background</item>
        <item name="actionBarTabTextStyle">@style/My.TabText.Style</item>
        <item name="android:actionBarTabTextStyle">@style/My.TabText.Style</item>
        <item name="actionBarTabStyle">@style/MyActionBarTabStyle</item>
    </style>

    <style name="My.TabText.Style" parent="@style/Widget.Sherlock.ActionBar.TabText">       
    <item name="android:textColor">#000000</item>
    <item name="android:textAllCaps">false</item>
    
</style>
    
    <!-- style for the tabs -->
    <style name="MyActionBarTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/tab_bg</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>
    
    <style name="FacebookLoginButton">
    <item name="android:textSize">1dp</item>
    <item name="android:background">@drawable/icon_fb_login</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_gravity">center_horizontal</item>
</style>
   
</resources>