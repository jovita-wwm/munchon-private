<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tick" />

        

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="ORDER COMPLETED" />

        <TextView
            android:id="@+id/txt_ordercomplet_message"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Your order has been placed and will be served at your table when it is ready.\n Enjoy" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
                    android:id="@+id/timeconfirm"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundedge"
                    android:layout_gravity="center"
                    android:text="Your Receipt" />
        
        <Button
                    android:id="@+id/timeconfirm"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:layout_margin="5dp"
                    android:paddingRight="25dp"
                    android:background="@drawable/roundedge"
                    android:layout_gravity="center"
                    android:text="Menu" />
        
    </LinearLayout>

</LinearLayout>
