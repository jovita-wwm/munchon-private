<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/tick" />

        <Button
                    android:id="@+id/timeconfirm"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/roundedge"
                    android:layout_gravity="center"
                    android:text="Card Added Successfully" />
      
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp"
        android:gravity="center|top"
        android:orientation="vertical" >

        <Button
                    android:id="@+id/timeconfirm"
                    android:layout_width="280dp"
                    android:onClick="backToOrder"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedge"
                    android:layout_gravity="center"
                    android:text="Go back to my order" />
        
        <Button
                    android:id="@+id/timeconfirm"
                    android:layout_width="280dp"
                    android:layout_marginTop="10dp"
                    android:onClick="addAnotherCard"
                    android:layout_height="wrap_content"
                    android:background="@drawable/roundedge"
                    android:layout_gravity="center"
                    android:text="Add Another Card" />
        
    </LinearLayout>

</LinearLayout>
