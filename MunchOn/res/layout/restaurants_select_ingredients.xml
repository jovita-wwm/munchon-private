<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:background="#ffffff" >

    <ScrollView android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_dish"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/dish" />

        <TextView
            android:id="@+id/txt_dishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Mini Mac &amp; Cheese bites"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/layout_parameters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >
            
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_label_selectQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginRight="50dp"
                android:text="Quantity"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/img_dropDown"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/txt_label_selectQuantity"
                android:src="@drawable/icon_options" />

            <TextView
                android:id="@+id/txt_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/img_dropDown"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/img_dropDown"
                android:text="Select"
                android:textSize="14dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="45dp"
            >

            <TextView
                android:id="@+id/txt_label_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:layout_marginRight="50dp"
                android:text="Price"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_marginRight="150dp"
                android:layout_toLeftOf="@+id/txt_label_price"
                android:text="$0.00" />
        </RelativeLayout>

        <EditText
            android:id="@+id/edt_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/orderbtnback"
            android:ems="10"
            android:hint="Any instructions..."
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/Gray"
            android:textSize="12dp" >

            <requestFocus />
        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top" >

            <TextView
                android:id="@+id/btn_add_to_basket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:gravity="top"
                android:layout_marginLeft="20dp"
                android:background="@drawable/orderbtnback"
                android:padding="10dp"
                android:text="Add To Basket" />

            <TextView
                android:id="@+id/btn_checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:gravity="top"
                android:layout_marginRight="20dp"
                android:background="@drawable/orderbtnback"
                android:padding="10dp"
                android:text="CheckOut" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>