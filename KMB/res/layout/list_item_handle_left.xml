<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="1in"
  android:animateLayoutChanges="true"
  android:orientation="horizontal">
  <!-- <ImageView
    android:id="@id/drag_handle"
    android:background="@drawable/drag"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_height"
    android:layout_weight="0" /> -->
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:background="@drawable/card_bg"
       android:layout_marginTop="2dp"
       android:layout_marginBottom="3dp"
       android:layout_marginRight="8dp"
       android:layout_marginLeft="8dp" 
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_weight="7"
                android:padding="10dp"
                  >

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:tag="beakimg"
                    android:maxWidth="100dp"
                    android:maxHeight="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                   
                     />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_weight="3" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium Text"
                    android:tag="title"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="#4B4D4C"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:tag="description"
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:textColor="@android:color/black"
                    android:text="description" />

            </LinearLayout>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_marginBottom="10dp"
            android:layout_weight="7" >

           

           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/beaconndetailIMG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:onClick="BeacondetailViewclick"
                        android:src="@drawable/detailsgray" />

                    <ImageView
                        android:id="@+id/beaconvideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/beaconndetailIMG"
                        android:onClick="BeaconVideoclick"
                        android:src="@drawable/videogray" />

                </RelativeLayout>

            </LinearLayout>
                 <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

            <ImageView
                android:id="@+id/beaconshare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="2dp"
                android:onClick="Beaconshareclick"
                android:src="@drawable/sharegray" />

            <TextView
                android:id="@+id/beacondistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imageView3"
                android:text="Distance"
                android:padding="2dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/darker_gray" />

            </RelativeLayout>

        </LinearLayout>

        

    </LinearLayout>
  
</LinearLayout>
